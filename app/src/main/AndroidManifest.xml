<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kevinwang.tomatoClock">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/StyleIndicator"
        android:label="@string/app_name"
        >
        <activity android:name="com.kevinwang.tomatoClock.FragmentContainerActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kevinwang.tomatoClock.SettingsActivity"
            android:parentActivityName=".FragmentContainerActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
